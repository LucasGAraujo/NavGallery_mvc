@model NavGallery.Models.Marca

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h2>Editar Marca</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nome da marca:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <a asp-action="Index" class="btn btn-secondary">Voltar a galeria</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Fotterok {
    <div class="container">
        &copy; 2023 - NavGallery - Page=Edit de marcas <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        <img src="~/imagens/1.jpg" style="max-width: 60px; max-height: 60px;" />
    </div>

}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
