@model NavGallery.Models.Car

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Car</h4>
<hr />
<div>
    <a asp-action="Index">Voltar a Gallery</a>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FotoUpload" class="control-label">Imagem:</label>
                <input type="file" asp-for="FotoUpload" class="form-control" />
                <span asp-validation-for="FotoUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoCar" class="control-label">Ano do Carro:</label>
                <input asp-for="AnoCar" class="form-control" />
                <span asp-validation-for="AnoCar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobre" class="control-label"></label>
                <input asp-for="Sobre" class="form-control" />
                <span asp-validation-for="Sobre" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="MarcaId" class="control-label">Marca:</label>
                <select asp-for="MarcaId" class="form-control" asp-items="ViewBag.MarcaId"></select>
                <span asp-validation-for="MarcaId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Fotterok {
    <div class="container">
        &copy; 2023 - NavGallery - Page=Edit de carros <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    <img src="~/imagens/1.jpg" style="max-width: 60px; max-height: 60px;" />
    </div>

}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
